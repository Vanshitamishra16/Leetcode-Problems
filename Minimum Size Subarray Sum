class Solution {
    public int minSubArrayLen(int target, int[] nums) {
        int l=0,r=0,win = Integer.MAX_VALUE;
        int sum=0;
        for(r=0;r<nums.length;r++){
            sum += nums[r];
            while(sum>=target){
            win = Math.min(win,r-l+1);
            sum -= nums[l];
            l++;
            }
        }

        if(win==Integer.MAX_VALUE)
        return 0;

        return win;
    }
}
